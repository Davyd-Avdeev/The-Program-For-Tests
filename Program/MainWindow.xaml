<Window x:Class="Program.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Program"
        mc:Ignorable="d"
        Title="Главное меню" MinHeight="480" MinWidth="640" Height="480" Width="640" Icon="IconForProgram.png" Closed="Window_Closed">    
    <Grid Margin="0,0,0,0">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#f5f5dc" Offset="0"/>
                <GradientStop Color="#42aaff" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="btnExit" Content="Выход" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,-125" MaxHeight="150" MaxWidth="150" MinHeight="50" MinWidth="150" Click="Window_Closed" Template="{StaticResource ButtonTemplate}" FontSize="20" FontStyle="Normal"/>
        <Button x:Name="btnStart" Content="Тесты" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,125" MaxHeight="150" MaxWidth="1500" MinHeight="50" MinWidth="150" Click="btnStart_Click" Template="{StaticResource ButtonTemplate}" FontSize="20" FontStyle="Normal"/>
    </Grid>
</Window>
