<Window x:Class="Program.WindowResults"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Program"
        mc:Ignorable="d"        
        Title="Результаты" MinHeight="480" MinWidth="640" MaxHeight="480" MaxWidth="640" Height="480" Width="640" Icon="IconForProgram.png" Closed="Window_Closed">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#f5f5dc" Offset="0"/>
                <GradientStop Color="#42aaff" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
            <Label Content="Вы ответили правильно на " HorizontalAlignment="Left" Margin="39,86,0,0" VerticalAlignment="Top" Width="256" Height="42" FontSize="20"/>
        <Label x:Name="lblResults" Content="10 из 20 вопросов" HorizontalAlignment="Left" Margin="295,86,0,0" VerticalAlignment="Top" Width="179" FontSize="20"/>
        <Button x:Name="btnBack" Content="Вернутся к началу" HorizontalAlignment="Center" Margin="0,0,0,75"  Click="Btn_Click" VerticalAlignment="Bottom" MinWidth="125" MinHeight="50" MaxHeight="100" MaxWidth="200" Template="{StaticResource ButtonTemplate}" FontSize="20" FontStyle="Normal"/>
        </Grid>
</Window>
